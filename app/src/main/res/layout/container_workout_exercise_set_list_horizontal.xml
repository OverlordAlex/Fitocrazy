<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_workoutExerciseSetList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="@color/blue_accent_lightest"
    android:elevation="4dp"
    android:gravity="start"
    android:orientation="vertical"
    android:outlineSpotShadowColor="@color/blue_main"
    android:paddingHorizontal="10dp">

    <TextView
        android:id="@+id/label_setDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textlist_weightInSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="4dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textlist_repsInSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start" />
    </LinearLayout>

</LinearLayout>