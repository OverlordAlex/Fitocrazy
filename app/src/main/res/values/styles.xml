<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button.PurpleAccent" parent="Theme.Fitocrazy">
        <item name="colorPrimary">@color/purple_accent</item>
    </style>

    <style name="Layout.OrangeAccent" parent="Theme.Fitocrazy">
        <item name="background">@color/orange_accent</item>
    </style>

    <style name="Dialog.NewExercise" parent="Theme.Fitocrazy">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="Navigation.BottomBar" parent="Theme.Fitocrazy">
        <item name="backgroundTint">@color/purple_main</item>
        <item name="itemIconTint">@color/orange_accent_light</item>
        <item name="itemTextColor">@color/orange_accent_light</item>
        <item name="itemRippleColor">@color/purple_accent</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="itemFillColor">@color/blue_tertiary</item>
    </style>

    <style name="test">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor" override="true">@color/white</item>
    </style>

</resources>